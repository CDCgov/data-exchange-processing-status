{
  "name": "playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generate:schema": "get-graphql-schema $BASEURL > schema.gql",
    "generate:operations": "gqlg --schemaFilePath ./schema.gql --destDirPath ./gql/autogenerated-operations --depthLimit 6",
    "generate:types": "graphql-codegen --config codegen.ts",
    "codegen": "npx dotenv -e .env -- npm run generate:schema && npm run generate:operations && npm run generate:types",
    "test": "dotenv -e .env -- npx playwright test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2"
  },
  "dependencies": {
    "@faker-js/faker": "^9.5.1",
    "dotenv-cli": "^8.0.0",
    "playwright-graphql": "^1.0.4",
    "typescript": "^5.7.2"
  }
}
