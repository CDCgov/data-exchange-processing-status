{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "paths": {
        "@fixtures/*": ["fixtures/gql"],
        "@gql": ["gql/graphql"]
      }
    }
  }
